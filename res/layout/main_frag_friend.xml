<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/friend_frag_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/bottom_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/friend_frag_friend_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/frag_friend_tab_bg_selector"
            android:clickable="true"
            android:drawableTop="@drawable/tab_address_normal"
            android:gravity="center"
            android:padding="3dip"
            android:text="@string/str_friends"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/friend_frag_group_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/frag_friend_tab_bg_selector"
            android:clickable="true"
            android:drawableTop="@drawable/tab_find_frd_normal"
            android:gravity="center"
            android:padding="3dip"
            android:text="@string/str_groups"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>