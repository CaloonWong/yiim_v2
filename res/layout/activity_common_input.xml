<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/user_nick_input_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/common_input_nick_edit"
            style="@style/common_editbox"
            android:layout_margin="0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:text="@string/tip_nick_edit" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/user_district_input_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/preference_first_item"
            android:padding="6dip" >

            <TextView
                style="@style/preference_input_lab_text"
                android:text="@string/input_lab_contry" />

            <EditText
                android:id="@+id/contry_edit"
                style="@style/preference_editbox"
                android:inputType="textEmailAddress" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/preference_last_item"
            android:padding="6dip" >

            <TextView
                style="@style/preference_input_lab_text"
                android:text="@string/input_lab_province" />

            <EditText
                android:id="@+id/district_edit"
                style="@style/preference_editbox"
                android:inputType="textEmailAddress" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/user_sign_input_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/common_input_user_sign_edit"
            style="@style/common_editbox"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:gravity="left|top"
            android:hint="@string/str_hint_user_sign"
            android:minHeight="96dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_memo_input_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/common_input_memo_edit"
            style="@style/common_editbox"
            android:layout_margin="0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>